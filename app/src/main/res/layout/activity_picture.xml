<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="BackgroundImage"
        android:id="@+id/image"
        android:adjustViewBounds="true"
        android:layout_marginRight="25dp"
        android:layout_gravity="center" />

    <FrameLayout
        android:id="@+id/layoutForPhoto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></FrameLayout>

    <FrameLayout
        android:id="@+id/layoutForText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp">

        <EditText
            android:id="@+id/editTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginTop="20px"
            android:text="Размер"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/background_material_light"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editTextBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110px"
            android:text="Бренд"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/background_material_light"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editTextState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:text="Состояние"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/background_material_light"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290px"
            android:text="Цена"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/background_material_light"
            android:textSize="15dp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/rightActionBar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#fff"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/background_change_button"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#ecf0f1" />
        <ImageButton
            android:id="@+id/make_background_photo_button"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#ecf0f1" />

        <ImageButton
            android:id="@+id/make_photo_button"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#ecf0f1" />

        <ImageButton
            android:id="@+id/OK"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:text="OK"
            android:textSize="22dp"
            android:textColor="#ffffffff"
            android:background="#000" />

    </LinearLayout>


</FrameLayout>