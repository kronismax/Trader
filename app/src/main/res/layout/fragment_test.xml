<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TestActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/users_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/users_get"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

        <Button
            android:id="@+id/upload_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_photo"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

        <Button
            android:id="@+id/upload_photo_to_wall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_photo_to_wall"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

        <Button
            android:id="@+id/upload_several_photos_to_wall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_several_photos_to_wall"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

        <Button
            android:id="@+id/createPicture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create Picture"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>
